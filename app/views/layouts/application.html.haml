- content_for :page_title, ' - GOV.UK Registers'

- content_for :global_header_text, 'GOV.UK <span id="product-name">Registers</span>'.html_safe

- content_for :homepage_url, "/"

- content_for :header_class, "with-proposition"

- content_for :inside_header do
  %strong.phase-badge Beta

- content_for :head do
  = stylesheet_link_tag 'application'
  = csrf_meta_tags

- content_for :proposition_header do
  .header-proposition
    .content
      = link_to 'Menu', '#proposition-links', class: 'js-header-toggle menu'
      %nav{id: 'proposition-menu'}
        %ul{id: "proposition-links"}
          %li= link_to 'Using Registers', 'https://registers.cloudapps.digital/using-registers'
          %li= link_to 'View registers', registers_path
          %li= link_to 'Support', 'https://registers.cloudapps.digital/support'
          %li= link_to 'Documentation', 'https://registers-docs.cloudapps.digital/'

- content_for :content do
  = content_for?(:main) ? yield(:main) : yield

- content_for :body_end do
  = javascript_include_tag 'application'
  = yield(:javascript)

= render file: 'layouts/govuk_template'
