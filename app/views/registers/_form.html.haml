= form_for @register do |f|
  .form-group
    = f.label :name, class: 'form-label'
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :phase, class: 'form-label'
    = f.select :phase, Register::CURRENT_PHASES, { include_blank: 'Select phase'} , { class: 'form-control' }
  .form-group
    = f.label :authority, class: 'form-label'
    = f.select :authority, Register::AUTHORITIES, { include_blank: 'Select authority'} , { class: 'form-control' }
  .form-group
    = f.label :description, class: 'form-label'
    = f.text_area :description, rows: 5, class: 'form-control'
  .form-group
    = f.submit 'Save', class: 'button'
